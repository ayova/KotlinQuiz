<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.QuestionsFragment"
    android:background="@color/colorPrimary">

    <ProgressBar
        android:id="@+id/questions_progress_bar"
        android:layout_margin="20dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="40"
        android:progressTint="@color/colorAccent"
        android:progressBackgroundTint="@color/progressBarBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/questions_tv_question"
        android:layout_below="@id/questions_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cual es una variable inmutable de Kotlin?"
        android:textColor="@android:color/white"
        android:layout_margin="20dp"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/questions_tv_question"
        android:orientation="vertical"
        android:gravity="bottom">
        <Button
            android:id="@+id/questions_btn_answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 1"
            android:backgroundTint="@color/custom_button_style"
            app:cornerRadius="20dp"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/questions_btn_answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 2"
            android:backgroundTint="@color/custom_button_style"
            app:cornerRadius="20dp"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/questions_btn_answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 3"
            android:backgroundTint="@color/custom_button_style"
            app:cornerRadius="20dp"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/questions_btn_answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 4"
            android:backgroundTint="@color/custom_button_style"
            app:cornerRadius="20dp"
            android:layout_margin="20dp"/>
    </LinearLayout>

</RelativeLayout>